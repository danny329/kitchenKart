<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingTop="0.1dp"
    android:paddingBottom="1dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">


    <LinearLayout
        android:id="@+id/cart_layout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="5dp"
        android:background="#0663E9"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="left"
            android:layout_marginLeft="2dp"
            android:src="@drawable/ic_pine" />

        <TextView
            android:id="@+id/from_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="200dp"
            android:layout_marginTop="-160dp"
            android:padding="10dp"
            android:text="Title"
            android:textColor="#040404"
            android:textSize="15dip"
            android:typeface="sans" />
        <!-- <Spinner
            android:id="@+id/price_dropdown"
            android:layout_width="165dp"
            android:layout_height="40dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/from_name"
            android:foreground="#aaa"/>-->
        <TextView
            android:id="@+id/Rs"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/price_dropdown"
            android:layout_marginStart="205dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Rs."
            android:textColor="#040404"
            android:textSize="15dip"
            android:typeface="sans" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/price_dropdown"
            android:layout_marginStart="240dp"
            android:layout_marginTop="-40dp"
            android:padding="10dp"
            android:text="Price"
            android:textColor="#040404"
            android:textSize="15dip"
            android:typeface="sans" />

        <ImageButton
            android:id="@+id/cart_minus_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="200dp"
            android:clickable="true"
            android:focusable="false"
            android:background="@drawable/roundcorner"
            android:src="@drawable/ic_minus" />

        <TextView
            android:id="@+id/CounterText"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="245dp"
            android:layout_marginTop="-25dp"
            android:text="0"
            android:textSize="15dip"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/cart_plus_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="280dp"
            android:layout_marginTop="-35dp"
            android:clickable="true"
            android:background="@drawable/roundcorner"
            android:focusable="false"
            android:src="@drawable/ic_plus" />


        <ImageButton
            android:id="@+id/addcartbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="-30dp"
            app:srcCompat="@drawable/ic_addcart1"
            android:background="@drawable/roundcorner"/>

    </LinearLayout>


</LinearLayout>